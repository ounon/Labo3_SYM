<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/nfc"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LOGIN AND NFC" />

    <Button
        android:id="@+id/only_nfc"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nfc"
        android:text="ONLY NFC" />

    <Button
        android:id="@+id/only_login"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/only_nfc"
        android:layout_below="@+id/only_nfc"
        android:text="ONLY LOGIN" />


</RelativeLayout>